{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Gov Salaries Data",
  "required": [
    "baseCurrency",
    "president",
    "vicePresident",
    "ministers",
    "congress",
    "senate",
    "royalty",
    "officials",
    "parties"
  ],
  "properties": {
    "baseCurrency": {
      "type": "string",
      "description": "The currency in which salaries are expressed, e.g. USD"
    },
    "president": { "$ref": "#/$defs/officialList" },
    "vicePresident": { "$ref": "#/$defs/officialList" },
    "ministers": { "$ref": "#/$defs/officialList" },
    "congress": { "$ref": "#/$defs/officialList" },
    "senate": { "$ref": "#/$defs/officialList" },
    "royalty": { "$ref": "#/$defs/officialList" },
    "officials": { "$ref": "#/$defs/officialList" },
    "parties": { "$ref": "#/$defs/partiesMap" }
  },
  "$defs": {
    "officialList": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "gender", "salary"],
        "properties": {
          "name": { "type": "string" },
          "gender": {
            "type": "string",
            "enum": ["F", "M", "X"]
          },
          "role": {
            "type": "string"
          },
          "party": { "type": "string" },
          "district": {
            "type": "string",
            "description": "Represented state, province, area, etc."
          },
          "salary": {
            "type": "object",
            "required": ["gross", "net"],
            "properties": {
              "gross": { "type": "number" },
              "net": { "type": "number" }
            }
          },
          "details": { "$ref": "#/$defs/detailsMap" }
        }
      }
    },
    "partiesMap": {
      "type": "object",
      "description": "Party ID.",
      "additionalProperties": {
        "type": "object",
        "description": "Details for a single party.",
        "properties": {
          "name": {
            "type": "string",
            "description": "The display name of the party."
          },
          "color": {
            "type": "string",
            "description": "The color associated with the party, in HEX color format."
          },
          "en": {
            "type": "string",
            "description": "The English translation for the party."
          },
          "range": {
            "type": "number",
            "description": "1: left wing - 2: center left - 3: center - 4: center right - 5: right wing"
          }
        },
        "required": ["name", "color", "en", "range"],
        "additionalProperties": false
      }
    },
    "detailsMap": {
      "type": "object",
      "description": "Any important information related to the official, it can be text, numbers, or links.",
      "additionalProperties": {
        "anyOf": [
          { "type": "string" },
          { "type": "number" },
          { "type": "string", "format": "uri" }
        ]
      }
    }
  }
}
